<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="220dp"
    >

    <Button
        android:background="@drawable/control"
        android:layout_width="@dimen/joystick_button_size"
        android:layout_height="@dimen/joystick_button_size"
        android:layout_centerInParent="true"
        android:id="@+id/btnManual"/>
    <Button
        android:background="@drawable/lft"
        android:id="@+id/btnLeft"
        android:layout_width="@dimen/joystick_button_size"
        android:layout_height="@dimen/joystick_button_size"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>
    <Button
        android:background="@drawable/rght"
        android:id="@+id/btnRight"
        android:layout_width="@dimen/joystick_button_size"
        android:layout_height="@dimen/joystick_button_size"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>
    <Button
        android:background="@drawable/up"
        android:id="@+id/btnUp"
        android:layout_width="@dimen/joystick_button_size"
        android:layout_height="@dimen/joystick_button_size"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>
    <Button
        android:background="@drawable/dwn"
        android:id="@+id/btnDown"
        android:layout_width="@dimen/joystick_button_size"
        android:layout_height="@dimen/joystick_button_size"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>
