        android:gravity="center_vertical|center_horizontal" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"

        android:id="@+id/i2"
        android:textSize="15dp"
        android:background="@drawable/border"
        android:gravity="center_vertical|center_horizontal"/>

</LinearLayout>
