<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="SOLAR_APP.Window1" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="SOLAR_APP"
	Background="AliceBlue"
	MaxWidth="900"
	MinWidth="660"
	MaxHeight="540"
	MinHeight="540"
	Width="303"
	Height="551">
	<StackPanel
		Orientation="Vertical"
		Height="Auto"
		Width="Auto"
		VerticalAlignment="Top">
		<Grid
			Width="auto"
			Height="330">
			<Grid.RowDefinitions>
				<RowDefinition
					Height="320"></RowDefinition>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition
					Width="*"></ColumnDefinition>
				<ColumnDefinition
					Width="*" />
			</Grid.ColumnDefinitions>
			<Canvas
				x:Name="compass"
				Margin="15,15,15,15"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Width="300"
				Height="300"
				Grid.Row="0"
				Grid.Column="0">
				<Canvas.ToolTip>
					<TextBlock
						Text="{Binding us.mState, Mode=OneWay}" />
				</Canvas.ToolTip>
				<Canvas.Background>
					<ImageBrush
						ImageSource="/SOLAR_APP;component/Images/dual_compass_rose.png" />
				</Canvas.Background>
				<Line
					Name="line"
					X1="10"
					Y1="60"
					X2="150"
					Y2="60"
					Stroke="Red"
					StrokeThickness="4" />
				<Ellipse
					Name="bola"
					Canvas.Left="130"
					Canvas.Top="79"
					Width="20"
					Height="20"
					Fill="Orange" />
			</Canvas>
			<StackPanel
				Orientation="Vertical"
				HorizontalAlignment="Stretch"
				Grid.Row="0"
				Grid.Column="1"
				Margin="0,0,0,0"
				Height="Auto"
				VerticalAlignment="Top">
				<Border
					BorderBrush="#FF00D0FF"
					BorderThickness="5"
					Height="50"
					HorizontalAlignment="Stretch"
					Margin="5,5,5,5"
					CornerRadius="20"
					Background="Aqua">
					<Label
						Name="lblDate"
						VerticalContentAlignment="Center"
						HorizontalContentAlignment="Center"
						FontSize="24"
						Foreground="#FF3F00FF" />
				</Border>
				<Border
					BorderBrush="Red"
					BorderThickness="2"
					CornerRadius="20"
					Margin="5,0,5,0"
					Background  ="LightSteelBlue" >
					<Grid
						HorizontalAlignment="Stretch"
						Height="60"
						Margin="0,0,0,0">
						<Grid.RowDefinitions>
							<RowDefinition></RowDefinition>
						</Grid.RowDefinitions>
						<Grid.ColumnDefinitions>
							<ColumnDefinition
								Width="*"></ColumnDefinition>
							<ColumnDefinition
								Width="3*" />
						</Grid.ColumnDefinitions>
						<Image
							Grid.Column="0"
							Grid.Row="0"
							Source="/SOLAR_APP;component/Images/compass.png"
							Margin="3,3,3,3" />
						<Border
							Grid.Column="1"
							Grid.Row="0"
							BorderThickness="5"
							HorizontalAlignment="Stretch"
							Margin="5,5,5,5"
							CornerRadius="15"
							BorderBrush="#FF0400FF"
							Background="#FF00FF83">
							<Label
								Name="lblAzim"
								VerticalContentAlignment="Center"
								HorizontalContentAlignment="Center"
								FontSize="20"
								Foreground="#FF3F00FF"
								FontWeight="Bold" />
						</Border>
					</Grid>
				</Border>
				<Border
					BorderBrush="Red"
					Background="LightSteelBlue"
					BorderThickness="2"
					CornerRadius="20"
					Margin="5,0,5,0">
					<Grid
						HorizontalAlignment="Stretch"
						Margin="0,0,0,0"
						Height="60">
						<Grid.RowDefinitions>
							<RowDefinition></RowDefinition>
						</Grid.RowDefinitions>
						<Grid.ColumnDefinitions>
							<ColumnDefinition
								Width="*"></ColumnDefinition>
							<ColumnDefinition
								Width="3*"></ColumnDefinition>
						</Grid.ColumnDefinitions>
						<Image
							Grid.Column="0"
							Grid.Row="0"
							Source="/SOLAR_APP;component/Images/angle.png"
							Margin="5,5,5,5" />
						<Border
							Grid.Column="1"
							Grid.Row="0"
							BorderBrush="#FF0400FF"
							Background="#FF00FF83"
							BorderThickness="5"
							HorizontalAlignment="Stretch"
							Margin="5,5,5,5"
							CornerRadius="15">
							<Label
								Name="lblElev"
								VerticalContentAlignment="Center"
								HorizontalContentAlignment="Center"
								FontSize="20"
								Foreground="#FF3F00FF"
								FontWeight="Bold" />
						</Border>
					</Grid>
				</Border>
				<Border
					BorderBrush="Red"
					Background="LightSteelBlue"
					BorderThickness="2"
					CornerRadius="20"
					Margin="5,0,5,0">
					<Grid
						HorizontalAlignment="Stretch"
						Margin="0,0,0,0"
						Height="60">
						<Grid.RowDefinitions>
							<RowDefinition></RowDefinition>
						</Grid.RowDefinitions>
						<Grid.ColumnDefinitions>
							<ColumnDefinition
								Width="*"></ColumnDefinition>
							<ColumnDefinition
								Width="3*"></ColumnDefinition>
						</Grid.ColumnDefinitions>
						<Image
							Grid.Column="0"
							Grid.Row="0"
							Source="/SOLAR_APP;component/Images/wind.png"
							Margin="5,5,5,5" />
						<Border
							Grid.Column="1"
							Grid.Row="0"
							BorderBrush="#FF0400FF"
							Background="#FF00FF83"
							BorderThickness="5"
							HorizontalAlignment="Stretch"
							Margin="5,5,5,5"
							CornerRadius="15">
							<Label
								Name="lblWind"
								VerticalContentAlignment="Center"
								HorizontalContentAlignment="Center"
								FontSize="20"
								Foreground="#FF3F00FF"
								FontWeight="Bold" />
						</Border>
					</Grid>
				</Border>
				<Border
					BorderBrush="Red"
					Background="LightSteelBlue"
					BorderThickness="2"
					CornerRadius="20"
					Margin="5,0,5,0">
					<Grid
						HorizontalAlignment="Stretch"
						Margin="0,0,0,0"
						Height="60">
						<Grid.RowDefinitions>
							<RowDefinition></RowDefinition>
						</Grid.RowDefinitions>
						<Grid.ColumnDefinitions>
							<ColumnDefinition
								Width="*"></ColumnDefinition>
							<ColumnDefinition
								Width="3*"></ColumnDefinition>
						</Grid.ColumnDefinitions>
						<Image
							Grid.Column="0"
							Grid.Row="0"
							Source="/SOLAR_APP;component/Images/light.png"
							Margin="5,5,5,5" />
						<Border
							Grid.Column="1"
							Grid.Row="0"
							BorderBrush="#FF0400FF"
							Background="#FF00FF83"
							BorderThickness="5"
							HorizontalAlignment="Stretch"
							Margin="5,5,5,5"
							CornerRadius="15">
							<Label
								Name="lblLight"
								VerticalContentAlignment="Center"
								HorizontalContentAlignment="Center"
								FontSize="20"
								Foreground="#FF3F00FF"
								FontWeight="Bold" />
						</Border>
					</Grid>
				</Border>
			</StackPanel>
		</Grid>
		<ListView
			Name="lvSlave"
			Grid.Column="0"
			Grid.Row="0"
			HorizontalContentAlignment="Left"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Center"
			Margin="7,0,7,0"
			Height="117">
			<ListView.View>
				<GridView>
					<GridView.Columns>
						<GridViewColumn
							Header="Имя"
							DisplayMemberBinding="{Binding Path=ip}"></GridViewColumn>
						<GridViewColumn
							Header="Имя"
							DisplayMemberBinding="{Binding Path=pitch}"></GridViewColumn>
						<GridViewColumn
							Header="Имя"
							DisplayMemberBinding="{Binding Path=roll}"></GridViewColumn>
						<GridViewColumn
							Header="Имя"
							DisplayMemberBinding="{Binding Path=head}"></GridViewColumn>
						<GridViewColumn
							Header="Имя"
							DisplayMemberBinding="{Binding Path=light}"></GridViewColumn>
						<GridViewColumn
							Header="Имя"
							DisplayMemberBinding="{Binding Path=terms}"></GridViewColumn>
					</GridView.Columns>
				</GridView>
			</ListView.View>
		</ListView>
	</StackPanel>
	<!-- -Grid
		Height="419"
		Width="479">
		
		
		
	</Grid-->
</Window>